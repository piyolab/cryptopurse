doctype html
html(lang='en')
  head
    // Global site tag (gtag.js) - Google Analytics
    script(async, src='https://www.googletagmanager.com/gtag/js?id=UA-118763672-1')
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-118763672-1');
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    script.
      if(!/iP(hone|(o|a)d)/.test(navigator.userAgent)){
        document.write('<link rel="manifest" href="manifest.json"/>');
      };
    link(rel='apple-touch-icon', href='/images/icons/icon-152x152.png')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', integrity='sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB', crossorigin='anonymous')
    title Ethereum - CryptoPurse.app
    script(src='/js/ethereumjs-tx-1.3.3.min.js')
    script(src='/js/ethereumjs-wallet-0.6.0.min.js')
    script(src='/js/web3.min.js')
    script(src='/js/jsQR.js')
    style.
      #reader-camera-preview {
        width: 100%;
      }
      #webview-warning {
        display: none;
      }
  body
    include includes/navbar.pug
    .container
      //- Toggle Menu
      #navbarToggleMenu.collapse
        .bg-dark.p-4
          p.text-white
            span#version
          button.btn.btn-outline-danger.btn-sm.btn-block(type='button', data-toggle='modal', data-target='#export-wallet-modal') Export wallet
          button.btn.btn-outline-danger.btn-sm.btn-block(type='button', data-toggle='modal', data-target='#import-wallet-modal') Import wallet
      #main-contents
        div Super Simple Ethereum wallet.
        include includes/disclaimer.pug
        .card.mb-3
          .card-body
            h5.card-title My Purse (Ethereum Wallet)
            h6.card-subtitle.mb-2.text-muted
              | Balance:
              span#my-address-balance
              |  ETH
              button#my-address-balance-reload-btn.btn.btn-sm(type='button', style='border:0;background:none;')
                  image(src='/images/ui/reload.png', width='14px', style='margin-bottom:4px;')
              a#etherscan-link.btn.btn-sm.btn-outline-secondary.float-right(target='_blank') History
            .input-group.mb-3
              input#my-address.form-control(type='text', readonly='')
              .input-group-append
                button#my-address-copy-btn.btn.btn-outline-secondary(type='button')
                  image(src='/images/ui/copy.png', width='18px', style='margin-bottom:2px;')
                button#my-address-qr-btn.btn.btn-outline-secondary(type='button', data-toggle='modal', data-target='#qrcode-modal')
                  image(src='/images/ui/qr_code.png', width='18px', style='margin-bottom:2px;')
        .card.mb-3
          .card-body
            h5.card-title Send ETH
            .input-group.mb-3
              input#to-address.form-control(type='text', placeholder="Recipient's address")
              #to-address-read-from-camera.input-group-append
                button#to-address-qr-btn.btn.btn-outline-secondary(type='button', data-toggle='modal', data-target='#qrcode-reader-modal') ðŸ“·
            .input-group.mb-3
              input#to-amount.form-control(type='number', placeholder='0', min='0', step='0.001')
              .input-group-append
                span#basic-addon2.input-group-text(readonly='') ETH
            button#send-eth-to-confirm-btn.btn.btn-primary(type='button', data-toggle='modal', data-target='#send-eth-confirm-modal') Send Ether

      // Modals
      include includes/qr-display.pug
      include includes/qr-reader.pug
      include includes/import-key-modal.pug
      include includes/export-key-modal.pug
      include includes/send-confirm-modal.pug
      include includes/send-result-modal.pug

    include includes/webview-warning.pug

    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js', integrity='sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T', crossorigin='anonymous')
    script(src='/js/qrcode.min.js')
    script(src='/js/Clipboard.js')
    script(src='/js/eth.js')
    script(src='/js/main.js')
